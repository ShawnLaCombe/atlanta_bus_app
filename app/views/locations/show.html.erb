<h3>The closest buses....</h3>
<% @buses.each do |bus| %>
  <p>
    <strong>Route:</strong><%= ["ROUTE"] %><%= bus["DIRECTION"] %><br>
    <strong>Bus Number:</strong><%= bus["VEHICLE"] %><br>
    <strong>Next Stop:</strong><%= but["TIMEPOINT"] %><br>
  </p>
<% end %>

